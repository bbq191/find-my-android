<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 定位权限 (增量请求模式) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"
        tools:ignore="BackgroundLocationPolicy" />

    <!-- 活动识别权限 (Android 10+ 需要运行时请求) -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />


    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- 通讯录权限 (用于获取机主信息) -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <!-- 通知权限 (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 振动权限 (用于查找设备) -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- 前台服务权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_REMOTE_MESSAGING" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <!-- FCM 推送权限 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- 系统覆盖层权限（丢失模式） -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- 全屏意图权限（丢失模式全屏通知） -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <!-- 精确闹钟权限（服务重启） -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- 电池优化白名单权限（确保后台服务稳定运行） -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <queries>
        <package android:name="com.android.vending" />
    </queries>

    <application
        android:name=".FindMyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Findmy"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <!-- 腾讯地图 API Key -->
        <meta-data
            android:name="TencentMapSDK"
            android:value="${TENCENT_MAP_KEY}" />

        <!-- 腾讯定位 SDK API Key -->
        <meta-data
            android:name="TencentLocationKey"
            android:value="${TENCENT_MAP_KEY}" />

        <!-- FCM 推送消息服务 -->
        <service
            android:name=".push.FCMMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Findmy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".MainActivityBoy"
            android:enabled="true"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_boy"
            android:label="@string/app_name"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivityGirl"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_girl"
            android:label="@string/app_name"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- WorkManager 前台服务（用于位置追踪） -->
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:foregroundServiceType="location"
            tools:node="merge"
            tools:ignore="ForegroundServicePermission" />

        <!-- 声音播放服务（用于查找设备） -->
        <service
            android:name=".service.SoundPlaybackService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- 丢失模式服务 -->
        <service
            android:name=".service.LostModeService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="lost_mode_display" />
        </service>

        <!-- MQTT 前台服务（保持后台连接，支持远程功能） -->
        <service
            android:name=".service.MqttForegroundService"
            android:exported="false"
            android:foregroundServiceType="remoteMessaging" />

        <!-- 围栏监控前台服务（高频位置监控，IMPORTANCE_LOW 通知） -->
        <service
            android:name=".service.GeofenceForegroundService"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- 地理围栏广播接收器（腾讯 Geofence SDK） -->
        <receiver
            android:name=".service.GeofenceBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="me.ikate.findmy.GEOFENCE_TRIGGERED" />
            </intent-filter>
        </receiver>

        <!-- 活动识别广播接收器 -->
        <receiver
            android:name=".service.ActivityTransitionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="me.ikate.findmy.ACTIVITY_TRANSITION" />
            </intent-filter>
        </receiver>

        <!-- 开机启动广播接收器（确保服务在设备重启后恢复） -->
        <receiver
            android:name=".service.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <!-- 服务重启广播接收器（用户划掉 APP 后重启服务） -->
        <receiver
            android:name=".service.ServiceRestartReceiver"
            android:enabled="true"
            android:exported="false" />

        <!-- 设备管理员接收器（用于丢失模式锁屏） -->
        <receiver
            android:name=".service.FindMyDeviceAdminReceiver"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLE_REQUESTED" />
            </intent-filter>
        </receiver>

        <!-- 丢失模式身份验证 Activity -->
        <activity
            android:name=".ui.LostModeAuthActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:showWhenLocked="true"
            android:turnScreenOn="true" />

        <!-- 丢失模式全屏 Activity -->
        <activity
            android:name=".ui.LostModeActivity"
            android:exported="false"
            android:theme="@style/Theme.Findmy"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:excludeFromRecents="true"
            android:launchMode="singleTask" />
    </application>

</manifest>