<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 定位权限 (增量请求模式) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"
        tools:ignore="BackgroundLocationPolicy" />

    <!-- 活动识别权限 (智能位置上报) -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 通讯录权限 (用于获取机主信息) -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <!-- 通知权限 (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 振动权限 (用于查找设备) -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- 前台服务权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <!-- 系统覆盖层权限（丢失模式） -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- 存储权限 (用于地图缓存) -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <queries>
        <package android:name="com.google.android.gms" />
        <package android:name="com.android.vending" />
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Findmy">

        <!-- Google Maps API Key (从 local.properties 读取) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Findmy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".MainActivityBoy"
            android:enabled="true"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_boy"
            android:label="@string/app_name"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivityGirl"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_girl"
            android:label="@string/app_name"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <service
            android:name=".service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- WorkManager 前台服务（用于位置追踪） -->
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:foregroundServiceType="location"
            tools:node="merge"
            tools:ignore="ForegroundServicePermission" />

        <!-- 声音播放服务（用于查找设备） -->
        <service
            android:name=".service.SoundPlaybackService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- 丢失模式服务 -->
        <service
            android:name=".service.LostModeService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="lost_mode_display" />
        </service>

        <!-- 地理围栏广播接收器 -->
        <receiver
            android:name=".service.GeofenceBroadcastReceiver"
            android:exported="false" />

        <!-- 活动识别广播接收器 -->
        <receiver
            android:name=".service.ActivityTransitionReceiver"
            android:exported="false" />

        <!-- 丢失模式身份验证 Activity -->
        <activity
            android:name=".ui.LostModeAuthActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:showWhenLocked="true"
            android:turnScreenOn="true" />

        <!-- 丢失模式全屏 Activity -->
        <activity
            android:name=".ui.LostModeActivity"
            android:exported="false"
            android:theme="@style/Theme.Findmy"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:excludeFromRecents="true"
            android:launchMode="singleTask" />
    </application>

</manifest>