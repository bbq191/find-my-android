<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 定位权限 (增量请求模式) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"
        tools:ignore="BackgroundLocationPolicy" />


    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 通讯录权限 (用于获取机主信息) -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <!-- 通知权限 (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 振动权限 (用于查找设备) -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- 前台服务权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- 个推推送权限 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- 系统覆盖层权限（丢失模式） -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- 全屏意图权限（丢失模式全屏通知） -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <!-- 存储权限 (用于地图缓存) -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <queries>
        <package android:name="com.android.vending" />
    </queries>

    <application
        android:name=".FindMyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Findmy">

        <!-- 高德定位 API Key -->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="${AMAP_API_KEY}" />

        <!-- 高德定位服务 -->
        <service android:name="com.amap.api.location.APSService" />

        <!-- 个推推送配置 -->
        <meta-data
            android:name="GETUI_APPID"
            android:value="${GETUI_APP_ID}"
            tools:replace="android:value" />
        <meta-data
            android:name="GETUI_APPKEY"
            android:value="${GETUI_APP_KEY}" />
        <meta-data
            android:name="GETUI_APPSECRET"
            android:value="${GETUI_APP_SECRET}" />

        <!-- 个推推送消息服务（继承 GTIntentService） -->
        <service
            android:name=".push.GeTuiPushService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Findmy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".MainActivityBoy"
            android:enabled="true"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_boy"
            android:label="@string/app_name"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivityGirl"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_girl"
            android:label="@string/app_name"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- WorkManager 前台服务（用于位置追踪） -->
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:foregroundServiceType="location"
            tools:node="merge"
            tools:ignore="ForegroundServicePermission" />

        <!-- 声音播放服务（用于查找设备） -->
        <service
            android:name=".service.SoundPlaybackService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- 丢失模式服务 -->
        <service
            android:name=".service.LostModeService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="lost_mode_display" />
        </service>

        <!-- MQTT 前台服务（保持后台连接，支持远程功能） -->
        <service
            android:name=".service.MqttForegroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- 地理围栏广播接收器（高德 GeoFence SDK） -->
        <receiver
            android:name=".service.GeofenceBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="me.ikate.findmy.GEOFENCE_TRIGGERED" />
            </intent-filter>
        </receiver>

        <!-- 活动识别广播接收器 -->
        <receiver
            android:name=".service.ActivityTransitionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="me.ikate.findmy.ACTIVITY_TRANSITION" />
            </intent-filter>
        </receiver>

        <!-- 丢失模式身份验证 Activity -->
        <activity
            android:name=".ui.LostModeAuthActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:showWhenLocked="true"
            android:turnScreenOn="true" />

        <!-- 丢失模式全屏 Activity -->
        <activity
            android:name=".ui.LostModeActivity"
            android:exported="false"
            android:theme="@style/Theme.Findmy"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:excludeFromRecents="true"
            android:launchMode="singleTask" />
    </application>

</manifest>